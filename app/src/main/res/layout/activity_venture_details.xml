<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentureDetails"
    android:background="@drawable/gradient_background"
    android:padding="@dimen/android_standard_padding"

    >

    <View
        android:id="@+id/topColourRectangleViewVentureDetails"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient_text_background"
        />
    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your chosen activity is:"
        android:textSize="@dimen/standardHeadingSize"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/topColourRectangleViewVentureDetails"
        app:layout_constraintBottom_toBottomOf="@id/topColourRectangleViewVentureDetails"
        app:layout_constraintLeft_toLeftOf="@id/topColourRectangleViewVentureDetails"
        app:layout_constraintRight_toRightOf="@id/topColourRectangleViewVentureDetails"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topColourRectangleViewVentureDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tryAgainButton"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_text_background">

            <ImageView
                android:id="@+id/ventureDetailsTypeImageView"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="5dp"
                tools:src="@drawable/ic_baseline_adb_24" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/ventureDetailsImageBarrier"
                app:constraint_referenced_ids="ventureDetailsTypeImageView"
                app:barrierDirection="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ventureCardDetailsNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/standardHeadingSize"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="Something really fun!Something really fun!Something really fun!"
                app:layout_constraintLeft_toRightOf="@id/ventureDetailsImageBarrier"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ventureDetailsTypeImageView"
                />

            <TextView
                android:id="@+id/ventureCardDetailsTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                tools:text="Social"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@id/ventureDetailsImageBarrier"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ventureCardDetailsNameTextView"
                />

            <TextView
                android:id="@+id/ventureCardDetailsParticipantsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3 people"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/ventureCardDetailsTypeTextView"
                app:layout_constraintLeft_toRightOf="@id/ventureDetailsImageBarrier"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/ventureCardDetailsPriceTextView"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                tools:text="0.5 monies"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/ventureCardDetailsParticipantsTextView"
                app:layout_constraintLeft_toRightOf="@id/ventureDetailsImageBarrier"
                />


            <TextView
                android:id="@+id/ventureCardDetailsLinkTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="www.do_something_fun_or_else.co.uk"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/ventureCardDetailsPriceTextView"
                app:layout_constraintLeft_toRightOf="@id/ventureDetailsImageBarrier"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/ventureCardDetailsAccessibilityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/ventureCardDetailsLinkTextView"
                app:layout_constraintLeft_toRightOf="@id/ventureDetailsImageBarrier"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centralGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back?"
        android:background="@drawable/gradient_text_background"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/centralGuideline"
        />

    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again?"
        android:background="@drawable/gradient_text_background"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/centralGuideline"
        app:layout_constraintRight_toRightOf="parent"
/>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>