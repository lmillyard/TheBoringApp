<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheBoringApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="customHeading" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/kalam_font_family</item>
        <item name="android:textSize">@dimen/main_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="customBlackHeading" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/kalam_font_family</item>
        <item name="android:textSize">@dimen/main_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="customSubHeading" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/kalam_font_family</item>
        <item name="android:textSize">@dimen/sub_heading_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customMainText" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/kalam_font_family</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customLink" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/kalam_font_family</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">#00BCD4</item>
    </style>

    <style name="customSmallBoldText" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/kalam_font_family</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customSmallText" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/kalam_font_family</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>